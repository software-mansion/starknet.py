IDENTIFIER: /[a-zA-Z_][a-zA-Z_0-9]*/

start: type
     | type_identifier
     | tuple

type: "core" "::" core_value
    | type_unit

core_value: "felt252"                                                   -> type_felt
          | "bool"                                                      -> type_bool
          | "integer" "::" "u" INT                                      -> type_uint
          | "option" "::" "Option" "::" "<" (type | type_identifier) ">"    -> type_option
          | "array" "::" "Array" "::" "<" (type | type_identifier) ">"      -> type_array
          | "starknet" "::" "contract_address" "::" "ContractAddress"   -> type_address
          | "starknet" "::" "eth_address" "::" "EthAddress"             -> type_eth_address

type_unit: "()"

type_identifier: (IDENTIFIER | "::")+ ("<" (type | ",")+ ">")?

tuple: "(" (start | ",")+ ")"


%import common.INT
%import common.WS
%ignore WS
